<% content_for :page_title, "new post" %>
<div class="section">
<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <div class="columns is-centered">
        <div class="column is-half">
      <%= f.input :title, required:true, input_html: { class: 'input', minlength: 5 }, wrapper: false, placeholder: "do not forget it!", label_html: { class: 'label' } %>
    </div>
  </div>
</div>

  <div class="field">
    <div class="control">
      <div class="columns is-centered">
        <div class="column is-half">
      <%= f.input :content, input_html: { class: 'textarea', maxlength: 300 }, wrapper: false, placeholder: "so . . .",  label_html: { class: 'label'}  %>
    </div>
  </div>
</div>
  </div>
  <div class="field">
    <div class="control">
      <div class="columns is-centered">
        <div class="column is-half">
  <%= f.button :submit, 'Create new post', class: "button is-success" %>
<% end %>
</div>
</div>
</div>
</div>