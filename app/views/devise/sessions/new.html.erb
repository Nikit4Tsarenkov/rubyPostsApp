<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        


          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          
          <div class="field">
            <div class="control">
              <%= f.input :email, required: true, input_html: { class:"input" }, wrapper: false, lable_html: { class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, required: true, input_html: { class:"input" }, wrapper: false, lable_html: { class: "label"},
               hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) 
              %>
            </div>
          </div>
          <div class="control">
          <%= f.button :submit, "Sing in", class: "button is-info is-medium" %>  
          </div>
          <% end %>

          
        </div>
      </div>
    </div>
  </div>
