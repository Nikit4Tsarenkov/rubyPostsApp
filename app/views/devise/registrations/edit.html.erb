<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title"> Edit user</h2>


          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

           <div class="field">
            <div class="control">
              <%= f.input :username, input_html: { class: "input", minlenght: 5 }, wrapper: false, lable_html: { class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email, input_html: { class:"input" },wrapper:false, lable_html: { class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, input_html: { class:"input" }, wrapper: false, lable_html: { class: "label"},
               hint: (" minimum #{@minimum_password_length} characters" if @minimum_password_length) 
              %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, input_html: { class:"input" }, wrapper: false, lable_html: { class: "label"}%>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :current_password, required: true, input_html: { class:"input" }, wrapper: false, lable_html: { class: "label"}%>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Save", class: "button is-success is-medium" %>
            </div>
          </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
